
@model WebApp.Models.Register
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>


<div>
    @using (Html.BeginForm("SaveRegisterDetails", "Account"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.UN)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.UN, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Pwd)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Pwd, new { @class = "form-control", type = "Password" })</div>
        </div><br />
        <input type="submit" value="Register" class="btn btn-primary" />
    }

</div>