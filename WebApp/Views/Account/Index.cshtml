@model IEnumerable<WebApp.Models.ProductInfo>
@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    function myfunction() {
        var pn = document.getElementById("Product_Name").value;
        var prce = document.getElementById("Price").value;
        var img = document.getElementById("Url").value;
        var desc = document.getElementById("Description").value;
        var myData = {
            Product_Name: pn,
            Price: prce,
            Url: img,
            Description:desc
        };
        var urlAction='/Account/SaveProductDetails'
    $.ajax({
        type: 'POST',
        data: JSON.stringify(myData),
        url: urlAction,
        contentType: 'application/json',
        dataType: 'json'
    });
    }
</script>

<div class='container'>

    <div class="row">
        <div class="form-group">
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Product</button>
        </div>
        <div class="col-sm-12">
            <table class="table table-primary">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Detail</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.slno</td>
                            <td>@item.Product_Name</td>
                            <td>@item.Url</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Product Details</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Product Name:</label>
                    <input type="text" class="form-control" id="Product_Name">
                </div>
                <div class="form-group">
                    <label>Price:</label>
                    <input type="number" class="form-control" id="Price">
                </div>
                <div class="form-group">
                    <label>Image Name:</label>
                    <input type="text" class="form-control" id="Url">
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <input type="text" class="form-control" id="Description">
                </div>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="myfunction()">Submit</button>
            </div>
            <div class="modal-footer">
                
            </div>
        </div>

    </div>
</div>